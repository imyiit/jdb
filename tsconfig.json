{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "outDir": "dist",
    "incremental": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": false,
    "module": "CommonJS",
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
